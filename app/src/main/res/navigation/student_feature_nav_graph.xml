<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_feature_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_themesFragment"
            app:destination="@id/themesFragment" />
    </fragment>
    <fragment
        android:id="@+id/themesFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.themes.ThemesFragment"
        android:label="ThemesFragment" >
        <action
            android:id="@+id/action_themesFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
        <action
            android:id="@+id/action_themesFragment_to_grammarFragment"
            app:destination="@id/grammarFragment" />
        <action
            android:id="@+id/action_themesFragment_to_textsFragment"
            app:destination="@id/textsFragment" />
        <action
            android:id="@+id/action_themesFragment_to_wordsFragment"
            app:destination="@id/wordsFragment" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.dialog.DialogFragment"
        android:label="DialogFragment" />
    <fragment
        android:id="@+id/grammarFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.grammar.GrammarFragment"
        android:label="GrammarFragment" />
    <fragment
        android:id="@+id/textsFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.texts.TextsFragment"
        android:label="TextsFragment" />
    <fragment
        android:id="@+id/wordsFragment"
        android:name="alatoo.edu.kg.kyrgyzmate.ui.screens.student.words.WordsFragment"
        android:label="WordsFragment" />

</navigation>