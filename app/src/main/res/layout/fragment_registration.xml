<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="30dp">

    <ImageButton
        android:id="@+id/arrowBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="#00000000"
        android:layout_gravity="top"/>

    <TextView
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp_3x"
        android:textColor="@color/action_color"/>

    <TextView
        style="@style/TextCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="First name*"
        android:textAlignment="viewStart"
        android:textColor="@color/field_description_color"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@drawable/rounded_input_field_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Enter..."
            android:inputType="text"
            style="@style/CustomTextInputEditText"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        style="@style/TextCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2x"
        android:text="Last name*"
        android:textAlignment="viewStart"
        android:textColor="@color/field_description_color"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@drawable/rounded_input_field_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Enter..."
            android:inputType="text"
            style="@style/CustomTextInputEditText"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/groupSelectContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2x"
        android:orientation="vertical">

        <TextView
            style="@style/TextCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your group*"
            android:textAlignment="viewStart"
            android:textColor="@color/field_description_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/dp_1x"
            android:background="@drawable/rounded_input_field_bg">

            <AutoCompleteTextView
                android:id="@+id/groupEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Select..."
                android:inputType="text"
                android:enabled="false"
                android:drawableEnd="@drawable/ic_drop_down"
                style="@style/CustomTextInputEditText"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        style="@style/TextCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2x"
        android:text="Email*"
        android:textAlignment="viewStart"
        android:textColor="@color/field_description_color"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintEnabled="false"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@drawable/rounded_input_field_bg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Enter..."
            android:inputType="text"
            style="@style/CustomTextInputEditText"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_8dp_bg"
        android:backgroundTint="@color/action_color"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:padding="@dimen/dp_2x"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_3x"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/dp_1x"
       android:gravity="end">

       <TextView
           style="@style/TextCaption"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Already have an account? | "
           android:textAlignment="viewEnd"
           android:textColor="@color/field_description_color"/>

       <TextView
           android:id="@+id/loginButton"
           style="@style/TextCaption"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Login"
           android:paddingVertical="@dimen/dp_1x"
           android:textAlignment="viewEnd"
           android:textColor="@color/purple_700"/>

   </LinearLayout>


</LinearLayout>