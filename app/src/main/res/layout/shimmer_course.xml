<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_2x"
    android:elevation="8dp"
    android:layout_marginVertical="@dimen/dp_1x"
    android:background="@drawable/rounded_16dp_bg"
    android:backgroundTint="@color/shimmer_light">

    <View
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:background="@color/shimmer_darker"
        android:layout_marginHorizontal="@dimen/dp_1x"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@color/shimmer_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@color/shimmer_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@color/shimmer_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@color/shimmer_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_1x"
        android:background="@color/shimmer_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_2x">

        <View
            android:id="@+id/levelLessons"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:background="@color/shimmer_darker"
            android:paddingHorizontal="@dimen/dp_2x"
            android:paddingVertical="4dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@color/shimmer_darker"/>

        <View
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:background="@color/shimmer_normal"
            android:layout_marginHorizontal="4dp" />

        <View
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="2dp"
            android:background="@color/shimmer_normal"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>