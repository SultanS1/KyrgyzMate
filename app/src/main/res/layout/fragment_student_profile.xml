<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/input_field_border_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rounded_16dp_bg"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="62dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_profile"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First and Last Name"
            android:textStyle="bold"
            style="@style/TextSubtitle"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            style="@style/TextBody"
            android:layout_marginTop="4dp"
            android:textColor="@color/input_hint_color"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_info_container_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/first_name"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color" />

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:text="First name"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextBody"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:background="@color/input_hint_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/last_name"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color"/>

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Last Name"
                style="@style/TextBody"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:background="@color/input_hint_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="@string/e_mail"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color"/>

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextBody"
                android:text="somethingdoto@gmail.com"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:background="@color/input_hint_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/group"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color" />

            <TextView
                android:id="@+id/groupTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:text="COM-21 / Teacher"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextBody"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:background="@color/input_hint_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/language_level"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color"/>

            <TextView
                android:id="@+id/languageLevelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextBody"
                android:text="Upper-Intermediate"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:background="@color/input_hint_color"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/last_topic_passed"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                style="@style/TextCaption"
                android:textColor="@color/input_hint_color"/>

            <TextView
                android:id="@+id/lastTopicPassedTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="2.25"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/TextBody"
                android:text="Upper-Intermediate/Dialog/My day"
                android:textColor="@color/black" />

        </GridLayout>

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_16dp_bg"
            android:backgroundTint="@color/action_color"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/TextBody"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_16dp_bg"
            android:backgroundTint="@color/input_field_border_color"
            android:text="@string/log_out"
            android:textAllCaps="false"
            android:textColor="@color/black"
            style="@style/TextBody"/>

    </LinearLayout>

</ScrollView>