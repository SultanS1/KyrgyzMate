<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:textColor">#FF333333</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextLargeTitle" parent="BaseText">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextLargeTitleSerif" parent="BaseText">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/roboto_serif_medium</item>
    </style>

    <style name="TextTitle" parent="BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBody" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextCaption" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSmall" parent="BaseText">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomTextInputEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>